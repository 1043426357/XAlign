# Set up the environment.

    PLUGIN_DIR="~/Library/Application Support/Developer/Shared/Xcode/Plug-ins/"
    XALIGN_PATH="$PLUGIN_DIR/XAlign.xcplugin"

# check path, create dir if not exist, remove id 
    
    if [ ! -d "$PLUGIN_DIR"]; then
       sudo mkdir -p "$PLUGIN_DIR"
    else
        if [ -d "$PLUGIN_DIR"]; then
            rm -rf "$XALIGN_PATH"
        fi
    fi

# Download the package and unpack it.

  curl -s http://github.so/XAlign/build/XAlign.tar.gz | tar xzf - -C "$XALIGN_PATH"